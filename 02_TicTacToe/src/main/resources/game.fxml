<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="gameBox" alignment="TOP_CENTER" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.spbau.gbarto.ui.GameController">
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Button id="back" alignment="CENTER" onAction="#back" prefWidth="${gameBox.width * 0.4}" text="Back" />

        <Button id="restart" onAction="#restart" prefWidth="${gameBox.width * 0.4}" text="Restart" />
      <padding>
         <Insets bottom="15.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </HBox>

    <GridPane fx:id="grid" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints minWidth="10.0" prefWidth="50.0" />
            <ColumnConstraints minWidth="10.0" prefWidth="50.0" />
            <ColumnConstraints minWidth="10.0" prefWidth="50.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="50.0" />
            <RowConstraints minHeight="10.0" prefHeight="50.0" />
            <RowConstraints minHeight="10.0" prefHeight="50.0" />
        </rowConstraints>
    </GridPane>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
